package com.si1.lab03.service;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.si1.lab03.dao.UsuarioDAO;
import com.si1.lab03.model.Usuario;


@RestController
@RequestMapping("/usuario")
public class UsuarioService {

	private UsuarioDAO usuarioDAO;
	
	public Usuario fazerLogin(Usuario usuario) {
		Usuario usuarioSalvo = usuarioDAO.verificarUsuario(usuario.getEmail());
		if (!usuario.getSenha().equals(usuarioSalvo.getSenha()))
			throw new RuntimeException("Senha incorreta, tente novamente.");
		return usuarioSalvo;
	}

	public Usuario cadastrar(Usuario usuario) {
		// TODO Auto-generated method stub
		return null;
	}
	
	
	

}
